---
const { title, desc, price } = Astro.props;
---

<div class="service-card h-full flex flex-col bg-white p-8 rounded-lg border border-gray-200 text-center">
  <h3 class="text-xl font-serif mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{desc}</p>
  <p class="text-gray-800 font-medium mb-4">{price}</p>
  <div class="mt-auto">
    <a href="#booking" class="inline-block px-6 py-2 text-sm border border-gray-800 text-gray-800 hover:bg-gray-800 hover:text-white transition duration-300 mt-4">
      Jetzt buchen
    </a>
  </div>
</div>
